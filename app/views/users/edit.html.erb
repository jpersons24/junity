<h1>Edit your profile!</h1>

<% if flash[:errors_array] %>
   <% flash[:errors_array].each do |error| %>
      <p style="color: red;"><em><%= error %></em></p>
   <% end %>
<% end %>

<div class="form-container">
   <h1>Edit your Profile!</h1>

      <%= form_for @user do |f| %>
         <div class="form-input">
            <%= f.label "Name:" %>
            <%= f.text_field :name %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Username:" %>
         <%= f.text_field :username %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Password:" %>
         <%= f.text_field :password %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Age:" %>
         <%= f.text_field :age %> <br>
         </div>

         <%= f.submit class: 'form-btn' "Confirm Changes" %>
      <% end %>
</div>