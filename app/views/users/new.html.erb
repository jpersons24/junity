<h1>Create Profile</h1>

<div class="user-errors-container">
   <% if flash[:errors_array] %>
      <% flash[:errors_array].each do |error| %>
         <p class="errors"><%= error %></p>
      <% end%>
   <% end %>
</div>

<div class="form-container">
   <h1>Create Profile</h1>

      <%= form_for @user do |f| %>
         <div class="form-input">
            <%= f.label "Name:" %>
            <%= f.text_field :name %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Username:" %>
         <%= f.text_field :username %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Password:" %>
         <%= f.text_field :password %> <br>
         </div>

         <div class="form-input">
         <%= f.label "Age:" %>
         <%= f.text_field :age %> <br>
         </div>

         <%= f.submit class: 'form-btn' "Create Profile" %>
      <% end %>
</div>