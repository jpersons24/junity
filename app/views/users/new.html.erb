<h1>Create Profile</h1>

<% if flash[:errors_array] %>
   <% flash[:errors_array].each do |error| %>
      <p style="color: red;"><%= error %></p>
   <% end%>
<% end %>

<%= form_for @user do |f| %>
   <%= f.label "Name:" %>
   <%= f.text_field :name %> <br>
   <%= f.label "Username:" %>
   <%= f.text_field :username %> <br>
   <%= f.label "Password:" %>
   <%= f.text_field :password %> <br>
   <%= f.label "Age:" %>
   <%= f.text_field :age %> <br>
   <%= f.submit "Create Profile" %>
<% end %>